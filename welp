#/usr/bin/env bash

if [ "$1" = "select" ]; then
            MAIM_ARGS="--select"
          elif [ "$1" = "fullscreen" ]; then
            MAIM_ARGS="-i $(xdotool getactivewindow)"
          else
            echo "specify either 'select' or 'fullscreen'"
            exit 1
          fi
            maim --quality 10  $MAIM_ARGS | xclip -selection clipboard -t image/png

